@model IEnumerable<Team1.Models.EFModels.Hotel>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Hotel", FormMethod.Get))
{
    <p>
        Name: @Html.TextBox("searchString")
        District: @Html.TextBox("district")
        <input type="submit" value="Search" />
    </p>
}


<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.District.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MainImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckinStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckinEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckoutStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckoutEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddBedFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreakfastPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelFacilities)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.District.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                <img src="@item.MainImage" alt="Hotel Image" style="width:300px; height:auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckinStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckinEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckoutStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckoutEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddBedFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreakfastPrice)
            </td>
            <td>
                @Html.Raw(item.HotelFacilities)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Hotel Room", "Index", "HotelRoom", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<!-- 在视图的底部添加 -->
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $.getJSON('@Url.Action("GetFacilities", "Hotel")', function(data) {
                e=>e.HotelFacilities
            });
        });
    </script>
}

